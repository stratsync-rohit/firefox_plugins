{
  "manifest_version": 2,
  "name": "StratSync - AI Co-Pilot (redirect)",
  "version": "1.0.1",
  "description": "Your AI co-pilot for customer success and business growth.",

  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "rohit@stratsyc.ai",
      "strict_min_version": "109.0"
    }
  }
}
